<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    tools:context="com.example.android.inventory.EditorActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/category_product" />

    <!-- Product Name field -->
    <EditText
        android:id="@+id/edit_product_name"
        style="@style/EditorFieldStyle"
        android:hint="@string/hint_product_name"
        android:inputType="textCapWords"
        android:paddingBottom="10dp" />

    <EditText
        android:id="@+id/edit_product_desc"
        style="@style/EditorFieldStyle"
        android:hint="@string/hint_product_desc"
        android:inputType="textMultiLine"
        android:paddingBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/category_price_label"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/category_price"
            android:textSize="14sp" />

        <!-- Price field -->
        <EditText
            android:id="@+id/edit_price"
            android:layout_width="151dp"
            android:layout_height="wrap_content"

            android:hint="@string/hint_price"
            android:inputType="numberDecimal"
            android:paddingBottom="10dp"
            android:textSize="12sp" />
    </LinearLayout>


    <!-- QUANTITY LAYOUT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/category_quantity_label"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:paddingEnd="25dp"
            android:paddingTop="10dp"
            android:text="@string/category_quantity"
            android:textSize="14sp"
            tools:ignore="RtlSymmetry"
            android:paddingRight="25dp" />

        <ImageView
            android:id="@+id/decrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/minus_one"
            android:src="@drawable/ic_remove_24dp"
            tools:ignore="VectorDrawableCompat" />

        <EditText
            android:id="@+id/edit_quantity"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="@string/hint_quantity"
            android:inputType="number"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/plus_one"
            android:src="@drawable/ic_add_24dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="@string/category_supplier" />

    <!-- Product Name field -->
    <EditText
        android:id="@+id/edit_supplier_name"
        style="@style/EditorFieldStyle"
        android:hint="@string/hint_supplier_name"
        android:inputType="textCapWords"
        android:paddingBottom="10dp" />

    <EditText
        android:id="@+id/edit_supplier_phone"
        style="@style/EditorFieldStyle"
        android:hint="@string/hint_phone_number"
        android:inputType="phone"
        android:paddingBottom="10dp" />

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageButton
        android:id="@+id/call_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/call_button"
        android:src="@drawable/ic_phone_24dp" />

    <ImageButton
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/delete_btn"
        android:src="@drawable/ic_delete_product_24dp" />
    </LinearLayout>
</LinearLayout>


